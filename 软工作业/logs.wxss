/**app.wxss**/
.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 100rpx;
  }
  
  .login-container {
    width: 80%;
    padding: 10px;
    border: 1px solid rgb(143, 36, 36);
    border-radius: 10px;
  }
  
  .input-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
  }
  
  .input-label {
    margin-bottom: 10px;
  }
  
  .input-field {
    width: 80%;
    height: 30px;
    line-height: 30px;
    border: 1px solid rgb(207, 53, 53);
    border-radius: 5px;
    padding: 0 10px;
  }
  
  .button-container {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
  }
  
  .login-button {
    width: 80%;
    height: 35px;
    line-height: 35px;
    border: none;
    border-radius: 5px;
  }
